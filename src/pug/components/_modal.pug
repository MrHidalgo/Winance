          select(name="register_day" id="register_day" selectric-js)
            option(value="" disabled selected)!= "00"
            option(value="00")!= "00"
            option(value="01")!= "01"
            option(value="02")!= "02"
            option(value="03")!= "03"
            option(value="04")!= "04"
            option(value="05")!= "05"
          label.form__label(for="register_day")!= "День"

        .form__field.form__field--date.form__field--select.form__field--p
          select(name="register_month" id="register_month" selectric-js)
            option(value="" disabled selected)!= "00"
            option(value="00")!= "00"
            option(value="00")!= "00"
            option(value="01")!= "01"
            option(value="02")!= "02"
            option(value="03")!= "03"
            option(value="04")!= "04"
            option(value="05")!= "05"
          label.form__label(for="register_month")!= "Месяц"

        .form__field.form__field--date.form__field--select.form__field--p
          select(name="register_year" id="register_year" selectric-js)
            option(value="" disabled selected)!= "0000"
            option(value="0000")!= "0000"
            option(value="0000")!= "0000"
            option(value="0001")!= "0001"
            option(value="0002")!= "0002"
            option(value="0003")!= "0003"
            option(value="0004")!= "0004"
            option(value="0005")!= "0005"
