        label.form__label(for="register_sname")!= "Отчество"

      .form__field.form__field--p
        input.form__input(type="text" name="register_surname" class="" id="register_surname" placeholder="")
        label.form__label(for="register_surname")!= "Фамилия"


      p.modal__subtitle.modal__subtitle--m!= "Контакты и пароль"

      .form__field.form__field--p
        input.form__input(type="tel" name="register_phone" class="" id="register_phone" placeholder="")
        label.form__label(for="register_phone")!= "Телефон"

      .form__field.form__field--p
        input.form__input(type="text" name="register_email" class="" id="register_email" placeholder="")
        label.form__label(for="register_email")!= "Укажите почту"

      .form__field.form__field--p
        input.form__input(type="password" name="register_pass" class="" id="register_pass" placeholder="")
        label.form__label(for="register_pass")!= "Пароль"

      .form__field.form__field--p
        input.form__input(type="password" name="register_passRepeat" class="" id="register_passRepeat" placeholder="")
        label.form__label(for="register_passRepeat")!= "Подтвердите пароль"


