// CALC :: START


.calc
  .container

    h1.calc__title.title!= "Калькулятор доходности"

    .calc__row

      .calc__tabs

        form(action="" method="")
          .calc__tabs-header
            a.calc__tabs-btn.is-active(href="#" title="" data-tabs-btn="0" tabs-btn-js)!= "Российский рубль <sup>RUB<sup>"
            a.calc__tabs-btn(href="#" title="" data-tabs-btn="1" tabs-btn-js)!= "Доллар США <sup>USD<sup>"
            a.calc__tabs-btn(href="#" title="" data-tabs-btn="2" tabs-btn-js)!= "Евро <sup>EUR<sup>"

          .calc__tabs-body.calc__tabs-body-0(data-tabs-body="")
            .calc__tabs-col.calc__tabs-col-0
              p!="Сумма инвестиций*"
              p!="<span>30 000</span> <span>₽</span>"

              .calc__tabs-range
                input(type="range")

              p!="Выплаты"

              .calc__tabs-checkbox
                input(type="checkbox" id="check-0")
                label(for!="check-0")!="Оставлять на счете"

              .calc__tabs-checkbox
                input(type="checkbox" id="check-1" checked)
                label(for!="check-1")!="Еженедельная выплата"

            .calc__tabs-col.calc__tabs-col-1
              p!="Срок инвестирования"
              p!="<span>3</span> <span>мес.</span>"

              .calc__tabs-range
                input(type="range")

            .calc__tabs-col.calc__tabs-col-2
              p!="Итоговая сумма"
              p!="<span>36 750.00</span> <span>₽</span>"
              p!="Cтавка: <strong>7.5%</strong> в месяц "
              button.btn.btn--color.btn--full(type="submit")!= "Открыть счет"


            .calc__tabs-col.calc__tabs-col-3
              p!= "* Сумма инвестиций возвращается в конце срока инвестирования"

            .calc__tabs-col.calc__tabs-col-4
              div
                p!="Сумма выплат <br>за 1 месяц"
                span!= "2 250.00"
                span!= "₽"
              div
                p!="Сумма выплат <br>за 3 месяца"
                span!= "6 750.00"
                span!= "₽"




// CALC :: END