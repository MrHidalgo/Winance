-
  var headerBarNav = [
    {
      href: 'blog.html',
      name: 'Блог'
    },
    {
      href: 'press.html',
      name: 'Пресса о нас'
    },
    {
      href: 'contacts.html',
      name: 'Контакты'
    },
    {
      href: 'reviews.html',
      name: 'Отзывы'
    }
  ];
  var headerWrapperNav = [
    {
      href: 'about.html',
      name: 'О фонде'
    },
    {
      href: 'howWeEarn.html',
      name: 'Как мы зарабатываем'
    },
    {
      href: 'investors.html',
      name: 'Инвесторам'
