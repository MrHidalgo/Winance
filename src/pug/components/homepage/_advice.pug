// ADVICE :: START


section.advice
  .container

    h1.advice__title.title!= "Нужна консультация?"

    form(action="" method="" class="form" autocomplete="off")
      .advice__row
        .advice__col
          .form__field.form__field--p
            input.form__input(type="text" name="name" class="" id="advice_name" placeholder="Имя")
            label.form__label(for="advice_name")!= "Как вас зовут"

        .advice__col
          .form__field.form__field--p
            input.form__input(type="text" name="phone" class="" id="advice_phone" placeholder="+7 000 000-00-00")
            label.form__label(for="advice_phone")!= "Телефон"

        .advice__col
          .form__field.form__field--p
            input.form__input(type="text" name="email" class="" id="advice_email" placeholder="Адрес почты")
            label.form__label(for="advice_email")!= "Ваша почта"


        .advice__col
          button.advice__btn.form__btn.btn.btn--color.btn--medium(type="submit")!= "Получить консультацию"

        .advice__col
          p.form__info!= "Мы свяжемся с вами и <br>ответим на любые <br>вопросы."

        .advice__col
          p.form__info!= "Никакого спама и <br>попадания в базы!"

        .advice__col
          p.form__info.form__info--i!= "Нажимая на кнопку «Отправить <br>сообщение», я даю согласие на <br>обработку персональных данных."


        
// ADVICE :: END
